<!DOCTYPE html>
<html>
<body>
<%- include('./partials/header.ejs') %>
<div class="container">
    <h1>Crie a sua pergunta</h1>
    <select class="dropdown-header btn-lg border-dark my-3" name="categories">
        <option value="category1">Categoria 1</option>
        <option value="category2">Categoria 2</option>
        <option value="category3">Categoria 3</option>
        <option value="category4">Categoria 4</option>
    </select>
    <form action="/newFAQ" method="POST">
        <input class="form-control input-lg my-2" name="question" placeholder="Criar pergunta...">
        <textarea class="form-control input-lg my-2" name="answer" placeholder="Criar resposta..."></textarea>
        <button class="btn btn-lg my-3" style="border: solid" type="submit" onclick="window.location.href='/newFAQ'">
            Criar Pergunta
        </button>
    </form>
</div>
<%- include('./partials/footer.ejs') %>
</body>
</html>