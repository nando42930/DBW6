<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/styles/custom.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <script>const support = require('./models/support');</script>
</head>
<body>
    <%- include('./partials/header.ejs') %>
    <div class="container" id="novogrupo">
        <i class="bi bi-plus-circle"></i>
        <button type="submit" style="float: right; margin-top:10px;" onclick="window.location.href='/newSupport'">Criar
            grupo
        </button>
        <br><br>
    </div>
    <div class="grupos">
        <table id="lista_grupo">
            <tr>
                <th>Grupo</th>
                <th>Título</th>
                <th>Descrição</th>
            </tr>
            <tr>
                <script>
                    support.searchUser.forEach(function (support) {
                        <button onclick="window.location.href='/chatSupport'">
                            <td>{support.username}</td>
                            <td>{support.title}</td>
                            <td>{support.description}</td>
                        </button>
                    });
                </script>
            </tr>
        </table>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>