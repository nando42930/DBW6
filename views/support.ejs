<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/styles/custom.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <script>const support = require('./models/support');</script>
</head>
<body>
<%- include('./partials/header.ejs') %>
<div class="container">
    <button class="btn btn-lg my-3 border" type="submit" style="float: right; margin-top:10px;"
            onclick="window.location.href='/newSupport'"><i class="bi bi-plus-circle px-1"></i>Criar
        grupo
    </button>
    <br><br>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Grupo</th>
            <th>Título</th>
            <th>Descrição</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <script>
                support.searchUser.forEach(function (support) {
                    <button onclick="window.location.href='/chatSupport'">
                        <td>{support.username}</td>
                        <td>{support.title}</td>
                        <td>{support.description}</td>
                    </button>
                });
            </script>
        </tr>
        </tbody>
    </table>
</div>
<%- include('./partials/footer.ejs') %>
</body>
</html>