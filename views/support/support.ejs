<!DOCTYPE html>
<html>
<%- include('../partials/head.ejs') %>
<body>
<%- include('../partials/header.ejs') %>
<div class="container">
    <button class="btn btn-lg my-3 border" type="submit" style="float: right; margin-top:10px;"
            onclick="window.location.href='/newSupport'"><i class="bi bi-plus-circle px-1"></i>Criar
        grupo
    </button>
    <br><br>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Grupo</th>
            <th>Título</th>
            <th>Descrição</th>
        </tr>
        </thead>
        <tbody>
        <%if(data.length) { %>
            <% for (var i = 0; i < data.length; ++i) { %>
                <tr onclick="window.location.href='/chatSupport'">
                    <td><%= i + 1 %></td>
                    <td><%= data[i].title %></td>
                    <td><%= data[i].description %></td>
                </tr>
        <% } } else { %>
            <tr>
                <td colspan="3">Não existem salas de chat criadas.</td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>
<%- include('../partials/footer.ejs') %>
</body>
</html>